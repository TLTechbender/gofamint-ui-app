{
  "$schema": "https://turbo.build/schema.json",
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": [".next/**", "!.next/cache/**", "dist/**"],
      "env": [
        "NEXTAUTH_URL",
        "NEXTAUTH_SECRET",
        "AUTH_GOOGLE_CLIENT_SECRET",
        "AUTH_GOOGLE_CLIENT_ID",
        "SANITY_WEBHOOK_SECRET",
        "DATABASE_URL",
        "DIRECT_URL"
      ]
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "lint": {
      "dependsOn": ["^lint"]
    },
    "lint:fix": {
      "dependsOn": ["^lint:fix"],
      "cache": false
    },
    "type-check": {
      "dependsOn": ["^type-check"]
    },
    "test": {
      "dependsOn": ["^build"],
      "outputs": ["coverage/**"]
    },
    "format": {
      "cache": false
    },
    "format:check": {},
    "clean": {
      "cache": false
    }
  },
  "globalDependencies": ["**/.env.*local", ".env"]
}
