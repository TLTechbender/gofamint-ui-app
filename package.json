{
  "name": "gofamint-ui",
  "version": "1.0.0",
  "private": true,
  "packageManager": "npm@10.0.0",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "install:all": "npm install",
    "install:packages": "npm install --workspaces",
    "install:clean": "npm run clean:all && npm run install:all",
    "clean:all": "rm -rf node_modules && rm -rf packages/*/node_modules",
    "dev": "npm run dev:app & npm run dev:cms & wait",
    "dev:app": "npm run dev -w gofamintui-app",
    "dev:cms": "npm run dev -w gofamintui-cms",
    "dev:both": "npm run dev:app & npm run dev:cms & wait",
    "build": "npm run build:cms && npm run build:app",
    "build:app": "npm run build -w gofamintui-app",
    "build:cms": "npm run build -w gofamintui-cms",
    "build:parallel": "npm run build --workspaces --if-present",
    "lint": "npm run lint -w gofamintui-app && npm run lint -w gofamintui-cms",
    "lint:parallel": "npm run lint --workspaces --if-present",
    "lint:fix": "npm run lint -w gofamintui-app -- --fix && npm run lint -w gofamintui-cms -- --fix",
    "test": "npm run test --workspaces --if-present",
    "clean": "npm run clean --workspaces --if-present && rm -rf node_modules",
    "type-check": "npm run type-check --workspaces --if-present",
    "docker:dev": "docker-compose up -d",
    "docker:prod": "docker-compose -f docker-compose.prod.yml up -d",
    "docker:build": "docker-compose build"
  },
  "devDependencies": {
    "prettier": "^3.5.3"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
